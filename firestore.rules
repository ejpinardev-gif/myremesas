rules_version = "2";

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.uid in [
        "71YiNOk9MOc6mNjxnnKBLST1Clh2"
      ];
    }

    match /artifacts/{appId}/public/data/admin_accounts/{accountId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /artifacts/{appId}/users/{userId}/transactions/{transactionId} {
      allow read, create, update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    match /config/pricing {
      allow read, write: if isAdmin();
    }
  }
}